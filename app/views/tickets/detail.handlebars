<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Detalle del Ticket</h2>
        <a href="/tickets" class="btn btn-outline-secondary">Volver a mis compras</a>
      </div>

      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><i class="bi bi-receipt"></i> {{ticket.code}}</h4>
        </div>
        <div class="card-body">
          <div class="row mb-4">
            <div class="col-md-6">
              <p><strong>Fecha de compra:</strong><br>{{ticket.purchase_datetime}}</p>
              <p><strong>Comprador:</strong><br>{{ticket.purchaser}}</p>
            </div>
            <div class="col-md-6 text-end">
              <h3 class="text-success">Total: ${{ticket.amount}}</h3>
            </div>
          </div>

          <h5 class="mb-3">Productos Comprados</h5>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Producto</th>
                  <th>Precio Unitario</th>
                  <th>Cantidad</th>
                  <th class="text-end">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                {{#each ticket.products}}
                  <tr>
                    <td>{{product.title}}</td>
                    <td>${{price}}</td>
                    <td>{{quantity}}</td>
                    <td class="text-end">${{multiply price quantity}}</td>
                  </tr>
                {{/each}}
              </tbody>
              <tfoot>
                <tr class="table-active">
                  <td colspan="3" class="text-end"><strong>Total:</strong></td>
                  <td class="text-end"><strong>${{ticket.amount}}</strong></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
